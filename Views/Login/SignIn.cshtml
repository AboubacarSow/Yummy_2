@model Yummy_2.Models.Admin
@{
    ViewBag.Title = "SignIn";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}

<div class="col-md-7">
    <h3>Giriş <strong>Yap</strong></h3>
    <p class="mb-4">Lorem ipsum dolor sit amet elit. Sapiente sit aut eos consectetur adipisicing.</p>
    <form action="#" method="post">
        <div class="form-group first">
            <label for="username">Kullanıcı Adı</label>
            <input type="text" class="form-control" name="UserName" required placeholder="Kullanıcı Adınız" id="username">
        </div>
        <div class="form-group last mb-3">
            <label for="password">Şifre</label>
            <input type="password" class="form-control" name="Password" required placeholder="Şifre" id="password">
        </div>

        <div class="d-flex mb-5 align-items-center">
            <label class="control control--checkbox mb-0">
                <span class="caption">Beni Hatırla</span>
                <input type="checkbox" checked="checked" />
                <div class="control__indicator"></div>
            </label>
        </div>

    <div class="text-danger">@Html.ValidationSummary()</div>
        <input type="submit" value="Giriş Yapınız" class="btn btn-block btn-primary">

    </form>
</div>

