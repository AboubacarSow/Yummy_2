@model Yummy_2.Models.Chef
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_AdminUILayout.cshtml";
}

<style>
    .titre {
        width: 100%;
        height: 60px;
        background: rgb(242, 242, 242);
        border-radius: 5px;
        display: flex;
        align-items: center;
        box-shadow: 4px 4px 8px rgba(128, 128, 128,0.8);
    }
</style>
<div class="container px-5">
    <div class="py-3 my-4 titre">
        <h2 class="mx-3 fs-4"> Chef Ekleme</h2>
    </div>

    <form method="post">
        <label class="form-control my-2">Tam Adı</label>
        @Html.TextBoxFor(ch=>ch.FullName, new { @class="form-control"})

        <label class="form-label my-2">Başlık </label>
        @Html.TextBoxFor(c=>c.Title, new  { @class="form-control"}) 
        
        <label class="form-label my-2">Açıklama </label>
        @Html.TextAreaFor(c=>c.Description, new  { @class="form-control"})

        <label class="form-control me-2">Resim Yolu Giriniz</label>
        @Html.TextBoxFor(c=>c.ImageUrl, new  { @class="form-control"})

        <button type="submit" class="btn btn-info text-light">Ekle</button>
    </form>
</div>

