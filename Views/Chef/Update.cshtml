@model Yummy_2.Models.Chef
@{
    ViewBag.Title = "Güncelleme";
    Layout = "~/Views/Shared/_AdminUILayout.cshtml";
}

<style>
    .titre {
        width: 100%;
        height: 60px;
        background: rgb(242, 242, 242);
        border-radius: 5px;
        display: flex;
        align-items: center;
        box-shadow: 4px 4px 8px rgba(128, 128, 128,0.8);
    }
</style>
<div class="container px-3">
    <div class="py-3 my-4 titre">
        <h2 class="mx-3 fs-4"> Chef Bilgi Güncelleme</h2>
    </div>

    <form method="post">
        <input type="hidden" name="ChefId" value="@Model.ChefId" />
        <label class="form-label my-2 fw-bold">Tam Adı</label>
        @Html.TextBoxFor(ch => ch.FullName, new { @class = "form-control" })

        <label class="form-label my-2 fw-bold">Başlık </label>
        @Html.TextBoxFor(c => c.Title, new { @class = "form-control" })

        <label class="form-label my-2 fw-bold">Açıklama </label>
        @Html.TextAreaFor(c => c.Description, new { @class = "form-control" })

        <label class="form-label my-2 fw-bold">Resim Yolu Giriniz</label>
        @Html.TextBoxFor(c => c.ImageUrl, new { @class = "form-control" })
        <br />
        <button type="submit" class="btn btn-info text-light">
        <i class="fas fa-edit me-2"></i>
        Güncelle</button>
    </form>
</div>


