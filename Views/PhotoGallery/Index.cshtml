@model List<Yummy_2.Models.PhotoGallery>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminUILayout.cshtml";
    int count = 0;
}

<div class="container">
    <div class="py-3 my-4 titre">
        <h2 class="mx-3 fs-4"> <i class="fa-solid fa-file-image me-2"></i>Gallery </h2>
    </div>
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>No.</th>
                <th class="text-secondary">Resim</th>
                <th class="text-secondary">Güncelle</th>
                <th class="text-secondary">Sil</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var item in Model)
            { count++;
                <tr>
                    <td>@count</td>
                    <td><img src="@item.ImageUrl" style="width:100px; height:100px; border-radius:50%" /></td>
                    <td><a href="/PhotoGallery/Update/@item.Id" class="btn btn-success"> <i class="fa fa-edit me-2"></i>Güncelle</a></td>
                    <td><a href="/PhotoGallery/Delete/@item.Id" class="btn btn-danger"> <i class="fa fa-trash me-2"></i>Sil</a></td>
                </tr>

            }
        </tbody>
    </table>
    <a href="/PhotoGallery/Create" class="btn btn-primary"> <i class="fa fa-plus me-2"></i>Ekle</a>
</div>

