@model Yummy_2.Models.Category
@{
    ViewBag.Title = "Güncelleme";
    Layout = "~/Views/Shared/_AdminUILayout.cshtml";
}

<style>
    .titre {
        width: 100%;
        height: 60px;
        background: rgb(242, 242, 242);
        border-radius: 5px;
        display: flex;
        align-items: center;
        box-shadow: 4px 4px 8px rgba(128, 128, 128,0.8), -4px 0 8px rgba(128, 128, 128,0.8);
    }
</style>
<div class="container px-5">
    <div class="py-3 my-4 titre">
        <h2 class="mx-3 fs-4"> Kategori Oluşturma</h2>
    </div>

    <form method="post">
        <input type="hidden" value="@Model.CategoryId" name="CategoryId"/>
        <label class="form-label fw-bold my-1 mt-2 text-secondary"> Kategori Adı</label>
        @Html.TextBoxFor(category => category.CategoryName, new { @class = "form-control " })
        <br />
        <button class="btn btn-primary my-2"> <i class="fa fa-plus"> </i>Güncelle</button>
    </form>
</div>

