@model Yummy_2.Models.About
@{
    ViewBag.Title = "Update";
    Layout = "~/Views/Shared/_AdminUILayout.cshtml";
}

<style>
    .titre {
        width: 100%;
        height: 60px;
        background: rgb(242, 242, 242);
        border-radius: 5px;
        display: flex;
        align-items: center;
        box-shadow: 4px 4px 8px rgba(128, 128, 128,0.8), -4px 0 8px rgba(128, 128, 128,0.8);
    }
</style>
<div class="container px-5">
    <div class="py-3 my-4 titre">
        <h2 class="mx-3 fs-4"> Hakkımızda Güncelleme</h2>
    </div>

    <form method="post">
        <input type="hidden" name="AboutId" value="@Model.AboutId" />
        <label class="form-label fw-bold my-1 mt-2 text-secondary"> İtem 1</label>
        @Html.TextBoxFor(a => a.Item_1, new { @class = "form-control " }) 

        <label class="form-label fw-bold my-1 mt-2 text-secondary"> İtem 2</label>
        @Html.TextBoxFor(a => a.Item_2, new { @class = "form-control " }) 

        <label class="form-label fw-bold my-1 mt-2 text-secondary"> İtem 3</label>
        @Html.TextBoxFor(a => a.Item_3, new { @class = "form-control" }) 
        
        <label class="form-label fw-bold  my-1 mt-2 text-secondary"> Açıklama</label>
        @Html.TextAreaFor(a => a.Description, new { @class = "form-control " })

        <label class="form-label fw-bold my-1 mt-2 text-secondary"> Telefon Numara</label>
        @Html.TextBoxFor(a => a.PhoneNumber, new { @class = "form-control " })

        <label class="form-label fw-bold my-1 mt-2 text-secondary"> Resim 1</label>
        @Html.TextBoxFor(a => a.ImageUrl, new { @class = "form-control " })

        <label class="form-label fw-bold my-1 mt-2 text-secondary"> Resim 2</label>
        @Html.TextBoxFor(a => a.ImageUrl_1, new { @class = "form-control " })

        <label class="form-label fw-bold my-1 mt-2 text-secondary"> Video Yolu Giriniz</label>
        @Html.TextBoxFor(a => a.VideoUrl, new { @class = "form-control" })

        <br />
        <button class="btn btn-primary my-2"> <i class="fa fa-plus"> </i>Güncelle</button>

    </form>

</div>


