@model Yummy_2.Models.Testimonial
@{
    ViewBag.Title = "Update";
    Layout = "~/Views/Shared/_AdminUILayout.cshtml";
}


<div class="container px-2">
    <div class="py-3 my-4 titre">
        <h2 class="mx-3 fs-4"> Referans Güncelleme</h2>
        </div>
    <form method="post" enctype="multipart/form-data">
        <input type="hidden" value="@Model.TestimonialId" name="TestimonialId" />
        <label class="form-label">Adı</label>
        @Html.TextBoxFor(t => t.FullName, new { @class = "form-control mb-3" })
        <label class="form-label">Başlık</label>
        @Html.TextBoxFor(t => t.Title, new { @class = "form-control mb-3" })

        <label class="form-label">Resim Seçiniz</label>
        <input type="file" name="ImageFile" class="form-control mb-3"  />
        <label class="form-label">Kaç Yıldız?</label>
        @Html.TextBoxFor(t => t.Rating, new { @class = "form-control mb-3" })
        <label class="form-label">Yorum</label>
        @Html.TextAreaFor(t => t.Comment, new { @class = "form-control mb-3" })

        <button class="btn btn-success text-light"> <i class="fa fa-edit me=2"></i>Güncelle</button>
    </form>

</div>

