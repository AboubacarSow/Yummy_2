@model Yummy_2.Models.SocialMedia
@{
    ViewBag.Title = "Update";
    Layout = "~/Views/Shared/_AdminUILayout.cshtml";
}

<div class="container px-2">
    <div class="py-3 my-4 titre">
        <h2 class="mx-3 fs-4"> <i class="fa-solid fa-globe me-2"></i> Sosyal Medya Güncelleme</h2>
    </div>
    <form method="post">
        <p class="text-danger">@Html.ValidationSummary()</p>
        <input type="hidden" value="@Model.Id" name="Id" />
        <label class="form-label">Başlık</label>
        @Html.TextBoxFor(s => s.Title, new { @class = "form-control mb-3" })

        <label class="form-label">Url</label>
        @Html.TextBoxFor(s => s.Url, new { @class = "form-control mb-3" })

        <label class="form-label">İkon</label>
        @Html.TextBoxFor(s => s.Icon, new { @class = "form-control mb-3" })

        <br />
        <button type="submit" class="btn btn-success"> <i class="fa fa-edit me-2"></i> Güncelle</button>

    </form>
</div>

