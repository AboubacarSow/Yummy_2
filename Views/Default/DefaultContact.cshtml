@model List<Yummy_2.Models.ContactInfo>

@foreach (var contact in Model)
{
    <div class="mb-5">
        <iframe style="width: 100%; height: 400px;" src="@contact.MapUrl" frameborder="0" allowfullscreen=""></iframe>
    </div>
    <div class="row gy-4">

        <div class="col-md-6">
            <div class="info-item d-flex align-items-center" data-aos="fade-up" data-aos-delay="200">
                <i class="icon bi bi-geo-alt flex-shrink-0"></i>
                <div>
                    <h3>Adresimiz</h3>
                    <p>@contact.Address</p>
                </div>
            </div>
        </div><!-- End Info Item -->

        <div class="col-md-6">
            <div class="info-item d-flex align-items-center" data-aos="fade-up" data-aos-delay="300">
                <i class="icon bi bi-telephone flex-shrink-0"></i>
                <div>
                    <h3>Bizi Arayın</h3>
                    <p>@contact.PhoneNumber</p>
                </div>
            </div>
        </div><!-- End Info Item -->

        <div class="col-md-6">
            <div class="info-item d-flex align-items-center" data-aos="fade-up" data-aos-delay="400">
                <i class="icon bi bi-envelope flex-shrink-0"></i>
                <div>
                    <h3>Bize Yazın</h3>
                    <p>@contact.Email</p>
                </div>
            </div>
        </div><!-- End Info Item -->

        <div class="col-md-6">
            <div class="info-item d-flex align-items-center" data-aos="fade-up" data-aos-delay="500">
                <i class="icon bi bi-clock flex-shrink-0"></i>
                <div>
                    <h3>Açık Saatleri <br></h3>
                    <p><strong>Paz-Cumar:</strong>@contact.OpenHours; <strong>Pazar:</strong> Kapalı</p>
                </div>
            </div>
        </div><!-- End Info Item -->


    </div>
}
