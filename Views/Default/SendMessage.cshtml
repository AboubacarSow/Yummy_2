@model Yummy_2.Models.Message

<form action="/Default/SendMessage" method="post" class="my-3" data-aos="fade-up" data-aos-delay="600">
    <div class="row gy-4">

        <div class="col-md-6">
            <input type="text" name="Name" class="form-control" placeholder="Adınız" required="">
        </div>

        <div class="col-md-6 ">
            <input type="email" class="form-control" name="Email" placeholder="Mail Adresiniz" required="">
        </div>

        <div class="col-md-12">
            <input type="text" class="form-control" name="Subject" placeholder="Konu" required="">
        </div>

        <div class="col-md-12">
            <textarea class="form-control" name="MessageBody" rows="6" placeholder="Mesajınız" required=""></textarea>
        </div>

        <div class="col-md-12 text-center">
          
            <button type="submit" class="btn btn-danger">Mesajı Gönder  </button>
        </div>

    </div>
</form>
