@model Yummy_2.Models.Product
@{
    ViewBag.Title = "Update";
    Layout = "~/Views/Shared/_AdminUILayout.cshtml";
}

<style>
    .titre {
        width: 100%;
        height: 60px;
        background: rgb(242, 242, 242);
        border-radius: 5px;
        display: flex;
        align-items: center;
        box-shadow: 4px 4px 8px rgba(128, 128, 128,0.8), -4px 0 8px rgba(128, 128, 128,0.8);
    }
</style>
<div class="container px-2">
    <div class="py-3 my-4 titre">
        <h2 class="mx-3 fs-4">Ürün Ekleme</h2>
    </div>
    <form method="post">
        <input type="hidden" value="@Model.ProductId" name="ProductId"/>
        <label class="form-label my-2">Ürüm Adı</label>
        @Html.TextBoxFor(p => p.ProductName, new { @class = "form-control" })

        <label class="form-label my-2">Resim Yolunu Veriniz</label>
        @Html.TextBoxFor(p => p.ImageUrl, new { @class = "form-control" })

        <label class="form-label my-2">İçindekiler</label>
        @Html.TextBoxFor(p => p.Ingredients, new { @class = "form-control" })

        <label class="form-label my-2">Fıyat</label>
        @Html.TextBoxFor(p => p.Price, new { @class = "form-control" })

        <label class="form-label my-2">Kategori</label>
        @Html.DropDownListFor(p => p.CategoryId, (List<SelectListItem>)ViewBag.Category, new { @class = "form-control" })

        <br />
        <button type="submit" class="btn btn-success"><i class="fas fa-plus"></i>Ekle</button>
    </form>
</div>



