
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminUILayout.cshtml";
}
<style>
    .card{
        border:none;
    }
</style>
<div class="container-fluid px-4">
    <h1 class="mt-4">Dashboard</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item active">Dashboard</li>
    </ol>
    <div class="row">
        <div class="col-xl-3 col-md-6">
            <div class="card bg-primary text-white mb-4">
                <div class="card-body d-flex flex-column align-items-center">
                    <p>Toplam Çorbalar</p> 
                    <p class="fs-4 fw-lighter">@ViewBag.soupCount</p>
                </div>
                
            </div>
        </div>
        <div class="col-xl-3 col-md-6">
            <div class="card bg-warning text-white mb-4">
                <div class="card-body d-flex flex-column align-items-center">
                    <p>En Pahalı Ürün : <spanb class=" fw-lighter">₺ @ViewBag.mostExpensiveP</spanb> </p>
                    <p class="fs-4 fw-lighter">@ViewBag.mostExpensiveN </p>
                  
                </div>
               
            </div>
        </div>
        <div class="col-xl-3 col-md-6">
            <div class="card bg-success text-white mb-4">
                <div class="card-body d-flex flex-column align-items-center">
                    <p>En Ucuz Ürün :  <span class="fw-lighter">₺ @ViewBag.lowerpriceP</span></p>
                    <p class="fs-4 fw-lighter">@ViewBag.lowerpriceN</p> 
       
                </div>
               
            </div>
        </div>
        <div class="col-xl-3 col-md-6">
            <div class="card bg-danger text-white mb-4">
                <div class="card-body d-flex flex-column align-items-center">
                    <p>Ortalama Fıyatı</p>
                    <p class="fs-4 fw-lighter">₺ @ViewBag.averagPrice </p>
                </div>
                
            </div>
        </div>
    </div>

    @Html.Action("Products")
</div>

