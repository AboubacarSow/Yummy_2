@model List<Yummy_2.Models.Admin>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminUILayout.cshtml";
    int count = 0;
}

<style>
    .titre {
        width: 100%;
        height: 60px;
        background: rgb(242, 242, 242);
        border-radius: 5px;
        display: flex;
        align-items: center;
        box-shadow: 4px 4px 8px rgba(128, 128, 128,0.8), -4px 0 8px rgba(128, 128, 128,0.8);
    }
</style>
<div class="container px-2">
    <div class="py-3 my-4 titre">
        <h2 class="mx-3 fs-4"> Ürünler</h2>
    </div>
    <table class="table table-bordered table-striped rounded-2">
        <thead>
            <tr>
                <th>No.</th>
                <th class="text-secondary">Resim</th>
                <th class="text-secondary">Kullanıcı Adı</th>
                <th class="text-secondary">Şifre</th>
                <th class="text-center text-secondary">Sil</th>
                <th class="text-center text-secondary">Güncelle</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var admin in Model)
            {
                count++;
                <tr>
                    <td>@count</td>
                    <td><img src="@admin.ImageUrl" style="width:60px; height:60px;border-radius:50%" /></td>
                    <td>@admin.UserName</td>
                    <td>@admin.Password </td>
                    <td><a href="/Admin/Delete/@admin.Id" class="btn btn-danger"><i class="fas fa-trash ms-1"></i>Sil</a></td>
                    <td><a href="/Admin/Update/@admin.Id" class="btn btn-success"><i class="fas fa-pen-to-square ms-1"></i>Güncelle</a></td>
                </tr>
            }
        </tbody>
    </table>
    <a href="/Admin/Create" class="btn btn-outline-primary">Yeni Kullanıcı Ekle</a>
</div>

