@model Yummy_2.Models.Admin
@{
    ViewBag.Title = "Update";
    Layout = "~/Views/Shared/_AdminUILayout.cshtml";
}

<style>
    .titre {
        width: 100%;
        height: 60px;
        background: rgb(242, 242, 242);
        border-radius: 5px;
        display: flex;
        align-items: center;
        box-shadow: 4px 4px 8px rgba(128, 128, 128,0.8);
    }
</style>
<div class="container px-5">
    <div class="py-3 my-4 titre">
        <h2 class="mx-3 fs-4"> Admin Bilgi Güncelleme</h2>
    </div>
    <div class="text-danger">@Html.ValidationSummary()</div>
    <form method="post">
        <input type="hidden" name="Id" value="@Model.Id" />
        <label class="form-label">Kullanıcı Adı</label>
        @Html.TextBoxFor(K => K.UserName, new { @class = "form-control" })

        <label class="form-label">Şifre</label>
        <input class="form-control" type="password" name="Password" value="@Model.Password" />

        <label class="form-label">Resim</label>
       <input type="file" name="ImageFile" value="@Model.ImageUrl" class="form-control" />
        <br />
        <button type="submit" class="btn btn-info text-light"><i class="fas fa-plus"></i>Ekle</button>
    </form>
</div>